### DBA
snippet cr_tablespace
	CREATE TABLESPACE ${1:tbspc_name}
	    DATAFILE '${2:ddf_name}'
	        SIZE 4G
	    AUTOEXTEND ON NEXT 100M MAXSIZE 20G
	    ;

snippet cr_user
	create user ${1:username}
		IDENTIFIED BY ${2:password}
		DEFAULT TABLESPACE ${3:tbspc_name}
		TEMPORARY TABLESPACE TEMP;
	;
	alter user $1
		quota unlimited on $2
		quota unlimited on $3
	;

