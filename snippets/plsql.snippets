
snippet sel
	  SELECT ${1:*}
	       , ${2}
	    FROM ${3:table_name}
	       , ${4}
	   WHERE 1=1
	     AND 2=2
	ORDER BY 1
	       , 2
	       ;

snippet selg
	  SELECT ${1:*}
	       , ${2}
	       , COUNT(${3:1})
	    FROM ${4:table_name}
	       , ${5}
	   WHERE 1=1
	     AND 2=2
	GROUP BY 1
	       , 2
	ORDER BY 1
	       , 2
	       ;

snippet upd
	  UPDATE ${1:table_name}
	     SET ${2:col1} = ${3:val1}
	       , ${4:col1} = ${5:val1}
	   WHERE 1=1
	     AND 2=2
	       ;

snippet del
	  DELETE ${1:table_name}
	   WHERE 1=1
	     AND 2=2
	       ;

snippet ins
	  INSERT INTO ${1:table_name}
	       ( ${2:col1}
	       , ${3:col2}
	       )
	 VALUES( ${4}
	       , ${5}
	       )
	       ;

snippet cr_table
	create table ${1:table_name}
	( ${2:column_name}			int
	, ${3:column_name}			int
	);

snippet cr_index
	create index ${1:idx_name} ON ${2:table_name}(${3:column_name});

snippet tc_ym
	TO_CHAR( ${1:column_name}, 'yyyy-mm')

snippet tc_ymd
	TO_CHAR( ${1:column_name}, 'yyyy-mm-dd')

snippet tc_ymd24s
	TO_CHAR( ${1:column_name}, 'yyyy-mm-dd HH24:MM:SS')

snippet td_ym
	TO_DATE( ${1:column_name}, 'yyyy-mm')

snippet td_ymd
	TO_DATE( ${1:column_name}, 'yyyy-mm-dd')

snippet td_ymd24s
	TO_DATE( ${1:column_name}, 'yyyy-mm-dd HH24:MM:SS')

snippet proc
	procedure ${1:procedure_name}
	        ( ${2:p_1}
	        , ${3:p_2}
	        )
	is
	begin
		-- code
	exception
		when others then
			-- code
			null;
	end $1;
	--

snippet fun
	function ${1:procedure_name}
	       ( ${2:p_1}
	       , ${3:p_2}
	       ) return ${4:varchar2}
	is
	begin
		-- code
	exception
		when others then
			-- code
			null;
	end $1;
	--

